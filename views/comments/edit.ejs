<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <div class="col-md col-sm">
        <h1>Edit Comment</h1>
        <form action="/campgrounds/<%= id %>/comments/<%= comment._id %>/edit?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" id="text" aria-describedby="commentText" value="<%= comment.text %>">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <a href="/campgrounds">Back</a>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>
