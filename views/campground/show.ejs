<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <p class="lead">YelpCamp</p>
        <div class="list-group">
          <li class="list-group-item active">Info 1</li>
          <li class="list-group-item">Info 2</li>
          <li class="list-group-item">Info 3</li>
        </div>
      </div>
      <div class="col-md-9">
        <div class="thumbnail" style="padding: 0px">
          <img class="img-responsive" style="width: 100%" src="<%= campground.image %>" alt="<%= campground.name %>">
          <div class="caption-full" style="padding: 9px">
            <h4 class="pull-right">$9.00/night</h4>
            <h4>
              <a href="">
                <%= campground.name %>
              </a>
            </h4>
            <p>
              <%= campground.description %>
            </p>
            <p>
              <em>
                Submitted by <%= campground.author.username %>
              </em>
            </p>
            <% if( user && campground.author.id.equals(user._id)) { %>
              <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a>
              <form style="display: inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-danger" value="Remove Campground">
              </form>
              <% } %>
          </div>
        </div>
        <div class="well">
          <div class="text-right">
            <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add new comment</a>
          </div>
          <hr>
          <% campground.comments.forEach(({ _id, author, createdAt, text}) => { %>
            <div class="row">
              <div class="col-md-12">
                <strong><%= author.username %></strong>
                <span class="pull-right"><%= createdAt.toDateString() %></span>
                <p>
                  <%= text %>
                </p>
                <% if(user && author.id.equals(user._id)) { %>
                  <a href="/campgrounds/<%= campground._id %>/comments/<%= _id %>/edit" class="btn btn-xs btn-warning">Edit</a>
                  <form style="display: inline" action="/campgrounds/<%= campground._id %>/comments/<%= _id %>?_method=DELETE" method="POST">
                    <input type="submit" class="btn btn-xs btn-danger" value="Remove">
                  </form>
                  <% } %>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>
