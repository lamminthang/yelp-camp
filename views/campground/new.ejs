<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <div class="col-md col-sm">
        <h1>Create a New Campround</h1>
        <form action="/campgrounds" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" id="name" aria-describedby="campgroundName" placeholder="Name of Campground">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="campground[image]" id="image" aria-describedby="campgroundImage" placeholder="Campground Image">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="campground[description]" id="description" aria-describedby="campgroundDescription"
              placeholder="Campground Description">
          </div>
          <div style="display:flex; justify-content:space-between">
            <a class="btn btn-danger" href="/campgrounds"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <% include ../partials/footer %>
